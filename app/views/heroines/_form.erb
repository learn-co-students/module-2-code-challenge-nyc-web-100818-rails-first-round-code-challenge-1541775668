<%= form_for @heroine do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :super_name %><br>
    <%= f.text_field :super_name %>
  </div>
  <div>
    <%= f.label :power_id %><br>
    <%= f.collection_select :power_id, @powers, :id, :name, prompt: true %>
  </div>
  <%= f.submit %>
<% end %>

<% if flash[:errors] %>
  <h4>Errors:</h4>
  <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>