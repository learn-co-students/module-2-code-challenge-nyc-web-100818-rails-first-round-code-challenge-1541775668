<h1>Create Heroine:</h1>

<ul>
  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <li><%= error %></li>
    <% end %>
  <% end %>
</ul>

<%= form_for @heroine do |f| %>

  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :super_name %><br>
  <%= f.text_field :super_name %><br>
  <%= f.label :power_id %><br>
  <%= f.collection_select :power_id, @powers, :id, :name%><br>
  <%= f.submit %>

<% end %>
