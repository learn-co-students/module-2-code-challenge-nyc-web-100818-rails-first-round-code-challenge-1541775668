<h2>All Heroines</h2>

<% if flash[:errors] %>
  <ol>
    <%= p flash[:errors] %>
  </ol>
<% end %>

<%= form_tag("/powers", method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<ul>
  <% @heroines.each do |heroine| %>
    <li>
      <%= link_to heroine.super_name, heroine %>
    </li>
    <br>
  <% end %>
</ul>
<%= link_to "Create Heroine", new_heroine_path %>
